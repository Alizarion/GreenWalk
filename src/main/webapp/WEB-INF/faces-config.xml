<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.0"
              xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    <application>
        <resource-bundle>
            <base-name>app</base-name>
            <var>app</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>lang</base-name>
            <var>lang</var>
        </resource-bundle>
    </application>
    <navigation-rule>

        <navigation-case>
            <from-outcome>community-outcome</from-outcome>
            <to-view-id>/home.xhtml</to-view-id>
            <redirect>true</redirect>
        </navigation-case>

        <navigation-case>
            <from-outcome>register-outcome</from-outcome>
            <to-view-id>/register.xhtml</to-view-id>
            <redirect>true</redirect>
        </navigation-case>

        <navigation-case>
            <from-outcome>resetPassword-outcome</from-outcome>
            <to-view-id>/resetpassword.xhtml</to-view-id>
            <redirect>true</redirect>
        </navigation-case>

        <navigation-case>
            <from-outcome>login-outcome</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
            <redirect>true</redirect>
        </navigation-case>

        <navigation-case>
            <from-outcome>singleform-outcome</from-outcome>
            <to-view-id>/user/singleEvent.xhtml</to-view-id>
            <redirect>true</redirect>
        </navigation-case>

        <navigation-case>
            <from-outcome>useredit-outcome</from-outcome>
            <to-view-id>/user/accountEdit.xhtml</to-view-id>
            <redirect>true</redirect>
        </navigation-case>

    </navigation-rule>

</faces-config>